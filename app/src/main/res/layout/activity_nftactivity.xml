<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NFTActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/moreBtnCard"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="40sp"
                android:layout_marginEnd="25sp"
                android:background="@drawable/btn_round_bg"
                app:cardCornerRadius="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/moreBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp"
                    app:srcCompat="@drawable/ic_more"
                    app:tint="#2E2E2E" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/backBtnCard"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="40sp"
                android:layout_marginStart="25sp"
                android:background="@drawable/btn_round_bg"
                app:cardCornerRadius="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/notifyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp"
                    app:srcCompat="@drawable/ic_back"
                    app:tint="#2E2E2E" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nftNameText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:text="Abstract Art"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="10sp"
                android:layout_marginTop="35sp"
                app:layout_constraintEnd_toStartOf="@+id/moreBtnCard"
                app:layout_constraintStart_toEndOf="@+id/backBtnCard"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:layout_margin="10sp"
            app:cardElevation="5sp"
            app:cardCornerRadius="40sp">
            <ImageView
                android:id="@+id/nftImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/monkey"
                android:transitionName="@string/nft_image_tran"
                android:scaleType="centerCrop"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:elevation="1sp"
                    android:background="@drawable/live_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/liveTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:07:44"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        tools:targetApi="jelly_bean_mr1" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:src="@drawable/ic_unliked"
                    android:padding="10sp"
                    android:foregroundGravity="center"
                    android:background="@drawable/like_btn_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
